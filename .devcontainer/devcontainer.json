{
  "name": "Python FastAPI Development",
  "dockerComposeFile": "./docker-compose.yml",
  // Usa la versi贸n .dev
  "service": "app",
  "workspaceFolder": "/app",
  // Configuraci贸n m铆nima para VSCode
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        // Soporte para Python
        "ms-python.vscode-pylance",
        // IntelliSense avanzado
        "ms-azuretools.vscode-docker",
        // Gesti贸n de contenedores
        "github.copilot"
        // Asistente de c贸digo
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "terminal.integrated.shell.linux": "/bin/bash"
      }
    }
  },
  // Puertos que se expondr谩n autom谩ticamente
  "forwardPorts": [
    8000,
    5432
  ],
  // Comando que se ejecuta despu茅s de crear el contenedor
  // Instala dependencias una vez que los archivos est谩n montados
  "postCreateCommand": "poetry install --no-interaction && echo ' DevContainer listo! Ejecuta: fastapi dev app/main.py'",
  // Configuraci贸n del usuario dentro del contenedor
  "remoteUser": "root"
}
