{
  "name": "Python FastAPI Development",
  "dockerComposeFile": "./docker-compose.yml",
  // Usa la versión .dev
  "service": "app",
  "workspaceFolder": "/app",
  // Configuración mínima para VSCode
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        // Soporte para Python
        "ms-python.vscode-pylance",
        // IntelliSense avanzado
        "ms-azuretools.vscode-docker",
        // Gestión de contenedores
        "github.copilot"
        // Asistente de código
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "terminal.integrated.shell.linux": "/bin/bash"
      }
    }
  },
  // Puertos que se expondrán automáticamente
  "forwardPorts": [
    8000,
    5432
  ],
  // Comando que se ejecuta después de crear el contenedor
  // Instala dependencias una vez que los archivos están montados
  "postCreateCommand": "poetry install --no-interaction && echo '🚀 DevContainer listo! Ejecuta: fastapi dev app/main.py'",
  // Configuración del usuario dentro del contenedor
  "remoteUser": "root"
}
